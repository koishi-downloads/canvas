{
  "include": ["src"],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "allowJs": true,
    "module": "CommonJS",
    "target": "ES2020",
    "declaration": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "resolveJsonModule": true,
  },
}